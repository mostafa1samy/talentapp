<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wh"
    tools:context=".details">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_person_pin_black_24dp"
        android:layout_gravity="center"
        android:id="@+id/ii"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:padding="8dp"
        android:textSize="24dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ii"
        android:id="@+id/duser"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/duser"
        android:hint="phone"
        android:padding="8dp"
        android:textSize="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:id="@+id/dphone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        app:layout_constraintTop_toBottomOf="@+id/dphone"
        android:padding="8dp"
        android:textSize="24dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:id="@+id/demail"/>

</android.support.constraint.ConstraintLayout>