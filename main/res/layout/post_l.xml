<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:contentPadding="30dp"

        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_person_pin_black_24dp"
            app:layout_constraintTop_toTopOf="parent"


            android:id="@+id/details"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/i"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details"

            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_video_library_black_24dp"

            android:gravity="center"
            android:textStyle="italic"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/i"
            android:layout_marginBottom="5dp"
            android:id="@+id/video"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tn"
        app:layout_constraintTop_toBottomOf="@+id/video"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/td"
        app:layout_constraintTop_toBottomOf="@+id/tn"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/td">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/like"
                android:src="@drawable/ic_favorite_border_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
                android:visibility="invisible"

                android:id="@+id/inc"/>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

