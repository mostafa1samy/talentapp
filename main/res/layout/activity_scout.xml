<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layouts"
    android:background="@color/wh"
    tools:context=".scout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emails"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />
    <EditText
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:id="@+id/passwords"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emails"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/talents"
        android:textColorHint="@color/white"
        android:hint="Talent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_accessibility_black_24dp"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:drawablePadding= "10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwords"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/talents"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp"
        android:text="Register"
        android:textStyle="italic"
        android:id="@+id/regs"
        android:shadowDx="2"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="already sign in"

        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:onClick="alreadys"

        app:layout_constraintTop_toBottomOf="@+id/regs"

        android:textSize="24sp"
        />

</android.support.constraint.ConstraintLayout>